
@{
    ViewBag.Title = "Add new album";
}
<div class="block divcenter text-center">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Create new album</h4>
    </div>
    <form action="" method="post" enctype="multipart/form-data" style="max-width: 600px;">
        <div class="col_full left">
            <label for="" class="capitalize t600">Name:</label>
            <input type="text"  id="nameTextForm" value="" class="sm-form-control" />
        </div>
        <div class="col_full center">
            <label for="" class="capitalize t600">UserId:</label>
            <input type="text" id="userIdTextForm" value="" class="sm-form-control" />
        </div>
        <div class="col_full nobottommargin">
            <button type="button" class="button button-rounded button-small button-dark" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" id="save-album">Save</button>
        </div>
    </form>
</div>

@section AddAlbumScripts {
    @Scripts.Render("~/bundles/jqueryval")
}

