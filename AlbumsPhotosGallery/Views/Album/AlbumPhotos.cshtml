@model AlbumsPhotosGallery.Models.Album
@{
    ViewBag.Title = "List of photos";
}

<h2>Photos</h2>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Photos from album @Model.Name</h1>
        </div>
        @foreach (var item in Model.Photos)
        {
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                <h3>@GetThumbnailPath(Model)</h3>
                <a class="thumbnail" href="@Html.Action("AlbumPhotos", "Album", new { id = item.ID })">
                    @*<img class="img-responsive" src="@Model.GetThumbnailPath(item)" alt="">*@
                </a>
            </div>
        }

        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a class="thumbnail modal-link">
                <img class="img-responsive" src="http://placehold.it/400x300" alt="">
            </a>

            @*<button type="button" class="modal-link btn btn-success">New Album</button>*@
        </div>


    </div>
    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2016</p>
            </div>
        </div>
    </footer>

</div>
